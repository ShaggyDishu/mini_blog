<div class="container">
  <h1 class="my-4">All Blog Posts</h1>

  <div class="row">
    <% @blog_posts.each do |blog_post| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= link_to blog_post.title, blog_post_path(blog_post) %></h5>
            <p class="card-text"><%= truncate(blog_post.content, length: 150) %></p>
            <%= link_to 'Read more', blog_post_path(blog_post), class: 'btn btn-primary' %>
          </div>
          <div class="card-footer text-muted">
            <%= time_ago_in_words(blog_post.created_at) %> ago
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
