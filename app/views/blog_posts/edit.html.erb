<div class="container">
  <h1 class="my-4">Edit Blog Post</h1>

  <div class="card">
    <div class="card-body">
      <%= render 'form', blog_post: @blog_post %>
    </div>
    <div class="card-footer">
      <%= link_to 'Show', blog_post_path(@blog_post), class: 'btn btn-primary' %> |
      <%= link_to 'Back', blog_posts_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
